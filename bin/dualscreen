#!/usr/bin/env ruby

require_relative 'basecli'

class DualScreen < BaseCli

  def initialize
    super

    @commands << 'xrandr --output HDMI1 --off --output LVDS1 --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --off --output VGA1 --mode 1680x1050 --pos 1920x0 --rotate normal'
  end

end

DualScreen.new.execute
