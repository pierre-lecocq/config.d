#!/usr/bin/env ruby

require_relative 'basecli'

class CleanHome < BaseCli

  def initialize
    super

    @commands << 'rm -rf ~/Desktop'
    @commands << 'rm -rf ~/Downloads'
    @commands << 'rm -rf ~/.local/share/Trash/files/'
    @commands << 'rm -rf ~/.icedove/*'
    @commands << 'rm -rf ~/.cache/*'
  end

end

CleanHome.new.execute
