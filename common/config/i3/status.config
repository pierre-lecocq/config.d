general {
        colors = false
        interval = 1
}

# order += "wireless wlan0"
# order += "ethernet eth0"
# order += "disk /"
# order += "disk /home"
# order += "load"
# order += "battery 0"
# order += "volume master"
order += "time"

wireless wlan0 {
        format_up = " wlan %essid %quality "
        format_down = " wlan ☠ "
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = " eth %speed "
        format_down = " eth ☠ "
}

battery 0 {
        format = " ☢ %percentage "
}

time {
        format = " %A %d %B %Y %H:%M:%S "
}

load {
        format = " Load %1min "
}

disk "/" {
        format = " ★ %free "
}

disk "/home" {
        format = " ☆ %free "
}

volume master {
        format = " ♪ %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
