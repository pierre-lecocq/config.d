general {
    colors = false
    interval = 1
}

# https://fortawesome.github.io/Font-Awesome/cheatsheet/

order += "window_title"
order += "ethernet enp3s0" # Replace enp3s0 with eth0 or any interface name
order += "load"
order += "disk /"
order += "volume master"
order += "weather_yahoo"
order += "time"

wireless wlan0 {
    format_up = "    %essid %quality "
    format_down = "    ☠ "
    color_good = '#ffffff'
}

# Interface can be changed here (i.e replace enp3s0 by eth0)
ethernet enp3s0 {
    # if you use %speed, i3status requires root privileges
    format_up = "    %ip "
    format_down = "    ☠ "
    color_good = '#ffffff'
}

battery 0 {
    format = "    %percentage "
}

time {
    format = "    %A %d %B %Y %H:%M:%S "
}

load {
    format = "    %1min "
    on_click 1 = "exec feh --bg-scale ~/images/wallpapers/`ls ~/images/wallpapers/ | sort -R | head -1`"
}

disk "/" {
    format = "    %percentage_used "
    on_click 1 = "exec thunar /home/pierre"
}

disk "/home" {
    format = "    %free "
}

cpu_usage {
    format = "    %usage "
}

volume master {
    format = "    %volume "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    on_click 1 = "exec pavucontrol"
    on_click 3 = "exec clementine"
}

window_title {
    format = '{title}|\u2665'
}

weather_yahoo {
    woeid = 615702
    cache_timeout = 7200
    forecast_days = 1
    request_timeout = 10
    unit = "C"
    format_today = '{icon} [\?color=temp {temp}°] '
    format_forecast = '{icon} [\?color=temp {low}°]/[\?color=temp {high}°]'
    thresholds = [(-10, '#7Ec0EE'), (10, '#ffffff'), (22, '#F30')]
    on_click 1 = "exec firefox http://www.meteo.fr"
}
